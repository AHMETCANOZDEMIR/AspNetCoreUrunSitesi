<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
    <link href="/Templates/admin/css/styles.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" href="/Admin/">Admin Panel</a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>

        <!-- Navbar Search-->
        <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
            <div class="input-group">
                <input class="form-control" type="text" placeholder="Search for..." aria-label="Search for..." aria-describedby="btnNavbarSearch" />
                <button class="btn btn-primary" id="btnNavbarSearch" type="button"><i class="fas fa-search"></i></button>
            </div>
        </form>
        <!-- Navbar-->
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item navbar-brand">
                <a href="/" target="_blank" class="link-light">
                    Siteyi Görüntüle
                </a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#!">Ayarlar</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" href="/Admin/Logout">Çıkış</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Core</div>
                        <a class="nav-link" href="/Admin/Brands">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Marka Yönetimi
                        </a>
                        <a class="nav-link" href="/Admin/Categories">
                            <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                            Kategori Yönetimi
                        </a>
                        <a class="nav-link" href="/Admin/Contacts">
                            <div class="sb-nav-link-icon"><i class="fas fa-book-open"></i></div>
                            İletişim Formları
                        </a>
                        <a class="nav-link" href="/Admin/News">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                            Haberler
                        </a>

                        <a class="nav-link" href="/Admin/Posts">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-area"></i></div>
                            İçerikler
                        </a>
                        <a class="nav-link" href="/Admin/Products">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                            Ürün Yönetimi
                        </a>
                        <a class="nav-link" href="/Admin/Sliders">
                            <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                            Slider Yönetimi
                        </a>
                        <a class="nav-link" href="/Admin/AppUser">
                            <div class="sb-nav-link-icon"><i class="fas fa-user"></i></div>
                            Kullanıcı Yönetimi
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Admin:</div>
                </div>
            </nav>
        </div>

        <div id="layoutSidenav_content">
            <main role="main" class="p-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="/Templates/admin/js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="/Templates/admin/assets/demo/chart-area-demo.js"></script>
    <script src="/Templates/admin/assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
    <script src="/Templates/admin/js/datatables-simple-demo.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
