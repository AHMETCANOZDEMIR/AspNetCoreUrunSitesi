@model Entities.AppUser

@{
    Layout = null;
}

<!DOCTYPE html>

<html class="h-100">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin Girişi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body class="d-flex h-100 align-items-center">
    <div class="container">
        <div class="row h-100 justify-content-center align-content-center align-items-center">
            <div class="col-md-4">
                <h4>Yönetici Bilgileri</h4>
                <hr />
                <form asp-action="Index">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-floating">
                        <label asp-for="Username"></label>
                        <input asp-for="Username" class="form-control" placeholder="Kullanıcı Adı" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" placeholder="Şifre" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Giriş" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

    </div>
</body>
</html>
